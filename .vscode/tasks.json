{
    "version": "2.0.0",
    "tasks": [
        {
            // Inicia a API do backend em modo de desenvolvimento (com recarregamento automático).
            "label": "Iniciar Backend (Desenvolvimento)",
            "type": "shell",
            "command": ".\\.venv\\Scripts\\Activate.ps1; uvicorn backend.main:app --reload",
            "isBackground": true,
            "problemMatcher": [],

            // Define esta como a tarefa de "build" padrão. Pode ser ativada com o atalho Ctrl+Shift+B.
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            // Executa os testes automatizados do projeto com a ferramenta pytest.
            "label": "Rodar Testes",
            "type": "shell",
            "command": ".\\.venv\\Scripts\\Activate.ps1; pytest",
            "problemMatcher": [],
            // Define esta como a tarefa de "teste" padrão. O atalho padrão para tarefas de teste é Ctrl+Shift+T.
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}